<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">
    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
      />
    <RadioGroup
        android:id="@+id/main_tab_radiogroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_height="50dp">
        <RadioButton
            android:id="@+id/rb_home"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:button="@null"
            android:text="首页"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:drawableTop="@drawable/radiobutton_home"
            android:gravity="center|bottom"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_toplist"
            android:text="榜单"
            android:drawableTop="@drawable/radiobutton_toplist"
            android:layout_marginTop="5dp"
            android:gravity="center|bottom"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:text="分类"
            android:drawableTop="@drawable/radiobutton_classify"
            android:gravity="center|bottom"
            android:button="@null"
            android:layout_marginTop="5dp"
            android:id="@+id/rb_classify"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/rb_mine"
            android:drawableTop="@drawable/radiobutton_mine"
            android:text="我的"
            android:gravity="center|bottom"
            android:button="@null"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>


    </RadioGroup>
</LinearLayout>
